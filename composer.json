{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.5",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.4.2",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "wpackagist-plugin/woocommerce": "dev-trunk",
    "wpackagist-plugin/wordpress-seo": "dev-trunk",
    "wpackagist-plugin/better-wp-security": "dev-trunk",
    "wpackagist-plugin/jetpack": "dev-trunk",
    "wpackagist-plugin/wordfence": "dev-trunk",
    "wpackagist-plugin/tac": "dev-trunk",
    "wpackagist-plugin/updraftplus": "dev-trunk",
    "wpackagist-plugin/google-analytics-for-wordpress": "dev-trunk",
    "wpackagist-plugin/yith-essential-kit-for-woocommerce-1": "dev-trunk",
    "wpackagist-plugin/stealth-login-page": "dev-trunk",
    "wpackagist-plugin/p3-profiler": "dev-trunk",
    "wpackagist-plugin/seo-image-alt-tags": "dev-trunk",
    "wpackagist-plugin/sucuri-scanner": "dev-trunk",
    "wpackagist-plugin/bulletproof-security": "dev-trunk",
    "wpackagist-plugin/woocommerce-customizer": "dev-trunk",
    "wpackagist-plugin/smart-manager-for-wp-e-commerce": "dev-trunk",
    "wpackagist-plugin/tinymce-advanced": "dev-trunk",
    "wpackagist-plugin/contact-form-7": "dev-trunk",
    "wpackagist-plugin/black-studio-tinymce-widget": "dev-trunk",
    "wpackagist-plugin/wp-edit": "dev-trunk",
    "wpackagist-theme/storefront": "*",
    "wpackagist-theme/pinnacle": "*"

  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
